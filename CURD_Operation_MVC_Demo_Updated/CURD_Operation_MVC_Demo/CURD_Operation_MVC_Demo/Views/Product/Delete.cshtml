@model CURD_Operation_MVC_Demo.Models.Product

@{
    ViewBag.Title = "Delete Product";
}

<h2>Delete Product</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <div><b>  @Html.DisplayNameFor(model => model.Category.CategoryName)</b> : @Html.DisplayFor(model => model.Category.CategoryName) </div>
    <br />
    <div><b>  @Html.DisplayNameFor(model => model.ProductName)</b> : @Html.DisplayFor(model => model.ProductName) </div>
